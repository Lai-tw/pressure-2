<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background">

    <TableRow>

        <TextView
            android:layout_column="1"
            android:gravity="left"
            android:padding="3dip"
            android:text="方式"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:layout_column="3"
            android:gravity="center"
            android:padding="3dip"
            android:text="說明"
            android:textColor="@color/black"
            android:textSize="20sp" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="做深呼吸練習"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="left"
            android:padding="1dip"
            android:text="透過深呼吸可以降低心跳和血壓，有助於放鬆身心。"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="進行運動"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="運動可以釋放身體內的內啡肽和血清素等物質，有助\n於提高心情和減輕壓力。去尋找適合自己的運動吧!"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="寫日記"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="將自己的想法和感受寫下來，可以釋放負面情緒，減\n少壓力和焦慮。"
            android:textColor="@color/black" />
    </TableRow>


    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="練瑜珈或冥想"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="瑜珈和冥想等放鬆技巧可以幫助人放鬆身心，減少負\n面情緒和壓力。"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="聆聽音樂"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="音樂有助於降低壓力和放鬆身心，選擇輕鬆愉悅的音\n樂來聆聽。"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="與朋友保持聯繫"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="其實你不需要故作堅強而獨自掙扎，朋友很重要，特\n別是在遭逢生活低潮時，與他們聯絡吧！把心中的負\n面情緒跟一個懂自己、跟自己站在同一陣線的人分享\n，是放鬆心情、降低壓力的絕佳方式。"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="接受你自己"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="做自己情緒的主人，別被其他人左右了自己的情緒，\n做好自己該做的事，讓自己立於不敗之地，就能夠讓\n自己越來越好。做自己情緒的主人，控制好的情緒，\n就能夠讓自己越來越快樂。"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_width="78dp"
            android:layout_height="match_parent"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="學習新技巧"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="center_vertical"
            android:padding="1dip"
            android:text="不論是為了娛樂、交友或增進工作機會，學習新技巧\n將有助於提昇你的自信。"
            android:textColor="@color/black" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_row="2"
            android:layout_column="1"
            android:padding="1dip"
            android:text="增加休息時間"
            android:textColor="@color/black" />

        <TextView
            android:layout_column="3"
            android:gravity="left"
            android:padding="1dip"
            android:text="適當增加休息和睡眠時間可以讓身體恢復和放鬆。"
            android:textColor="@color/black" />
    </TableRow>

    <Button
        android:id="@+id/btn_method"
        android:layout_width="296dp"
        android:layout_height="63dp"
        android:layout_marginTop="170dp"
        android:backgroundTint="#EBDEFF"
        android:text="返回"
        android:textColor="@color/black"
        android:textSize="30sp" />

</TableLayout>