<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage_information"
    android:background="@drawable/bg22">

    <TextView
        android:id="@+id/information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="相關資訊"
        android:textColor="@color/black"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/diary_select"
        android:layout_width="238dp"
        android:layout_height="92dp"
        android:layout_marginTop="56dp"
        android:backgroundTint="#E4C1F9"
        android:text="查詢日記"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/information_title"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/diet_select"
        android:layout_width="238dp"
        android:layout_height="92dp"
        android:layout_marginTop="68dp"
        android:backgroundTint="#E4C1F9"
        android:text="飲食資訊"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diary_select"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/emotion_select"
        android:layout_width="238dp"
        android:layout_height="92dp"
        android:layout_marginTop="72dp"
        android:backgroundTint="#E4C1F9"
        android:text="查詢心情"
        android:textColor="@color/black"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/diet_select"
        tools:ignore="MissingConstraints" />
</androidx.constraintlayout.widget.ConstraintLayout>