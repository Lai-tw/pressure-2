<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage_information">

    <TextView
        android:id="@+id/information_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="52dp"
        android:text="相關資訊"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="176dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/diary_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:text="查詢日記"
        app:layout_constraintTop_toBottomOf="@+id/information_title"
        tools:layout_editor_absoluteX="158dp"
        tools:ignore="MissingConstraints" />

    <Button
        android:id="@+id/diet_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="68dp"
        android:text="飲食資訊"
        app:layout_constraintTop_toBottomOf="@+id/diary_select"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="158dp" />

    <Button
        android:id="@+id/emotion_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="76dp"
        android:text="查詢心情"
        app:layout_constraintTop_toBottomOf="@+id/diet_select"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="158dp" />
</androidx.constraintlayout.widget.ConstraintLayout>