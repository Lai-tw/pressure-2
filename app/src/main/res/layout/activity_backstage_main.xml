<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".backstage_main">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="317dp"
        android:layout_height="64dp"
        android:layout_marginTop="16dp"
        android:text="HOLD情緒後台端"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/manage_info"
        android:layout_width="238dp"
        android:layout_height="90dp"
        android:text="資訊管理"
        android:textSize="24sp"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="96dp"
        tools:layout_editor_absoluteY="582dp" />

    <Button
        android:id="@+id/manage_test"
        android:layout_width="241dp"
        android:layout_height="88dp"
        android:layout_marginBottom="76dp"
        android:text="測驗管理"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/manage_info"
        app:layout_constraintTop_toBottomOf="@+id/manage_user"
        app:layout_constraintVertical_bias="0.811"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="85dp" />

    <Button
        android:id="@+id/manage_user"
        android:layout_width="240dp"
        android:layout_height="97dp"
        android:layout_marginTop="124dp"
        android:text="使用者管理"
        android:textSize="24sp"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="94dp" />
</androidx.constraintlayout.widget.ConstraintLayout>